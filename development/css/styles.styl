// Import Modules
@import 'includes/normalise'
@import 'includes/mixins'
@import 'includes/grater'
@import 'typography'


body
	font-family "Avenir Next"
	background #FAFAFA

input
	background #FFFFFF
	border 1px solid #F7F7F7
	outline none
	font-size 22px
	font-family "Avenir Next"
	font-weight 300
	padding 12px
	margin-bottom 4px 
	width 300px
	margin: 5px
	float left
	display block
	-webkit-box-sizing border-box 
	-moz-box-sizing border-box 
	box-sizing border-box 

.grade
	font-size 50px
	text-align center
	margin-bottom 1em 
	
	h1
		margin-bottom 0
		line-height 1  
	
	small
		font-size 16px
		text-transform uppercase 